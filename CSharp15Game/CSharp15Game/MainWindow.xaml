<Window x:Name="mainStack" x:Class="CSharp15Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharp15Game"
        mc:Ignorable="d"
        Title="Пятнашки" MaxHeight="350" MaxWidth="525">
    <Grid Background="#FFCEEAE2">
        <StackPanel x:Name="stackButtons" HorizontalAlignment="Center" Margin="8,0,0,0" VerticalAlignment="Center" Background="#FFD4D4D4" Orientation="Horizontal">
            <Border Background="Red" BorderThickness="2">
                <Grid x:Name="fieldMain" Margin="5" Background="#FFFBECC3"></Grid>
            </Border>
            <StackPanel>
                <Button x:Name="btnTryAgain" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,20" Click="btnTryAgain_Click" FontSize="14" Foreground="Black">Try again!</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
